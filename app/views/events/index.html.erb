<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Name</th>
      <th>Venue</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.group_id %></td>
        <td><%= event.name %></td>
        <td><%= event.venue.name %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', group_events_path(@group, @event) %></td>
        <td><%= link_to 'Edit', edit_group_event_path(@group, event) %></td>
        <td><%= link_to 'Destroy', [@group, event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

