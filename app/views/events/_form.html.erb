<%= simple_form_for([@group, @event], html: { class: "form-block" }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Event Name", input_html: { class: "form-control" } %>
    <%= f.simple_fields_for :venue do |p| %>
      <%= p.input :name, required: true, label: false, placeholder: "Venue Name", input_html: { class: "form-control" } %>
      <p>Please Choose a State</p>
      <%= p.input :state, collection: us_states, required: true, label: false, input_html: { class: "form-control" } %>
      <%= p.input :city, required: true, label: false, placeholder: "City", input_html: { class: "form-control" } %>
    <% end %>
    <%= f.input :description, label: false, placeholder: "Event Description", input_html: { class: "form-control" } %>
    <p>When is the Event?<p>
    <%= f.input :date, as: :date, required: true, label: false, input_html: { class: "form-control" } %>
    <%= f.button :submit, class: "btn btn-info block" %>

<% end %>
