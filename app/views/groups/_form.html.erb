<%= simple_form_for(@group, html: { class: "form-block" }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Group Name", input_html: { class: "form-control" } %>
  <%= f.simple_fields_for :location do |p| %>
    <%= p.input :city, required: true, label: false, placeholder: "City", input_html: { class: "form-control" } %>
    <p class="pull-left">Please Choose a State from the dropdown list</p>
    <%= p.input :state, :collection => us_states, required: true, label: false, placeholder: "State", input_html: { class: "form-control" } %>
    <%= p.input :postal_code, required: true, label: false, placeholder: "Postal Code", input_html: { class: "form-control" } %>
  <% end %>
  <p class="pull-left">Add an Featured Image for you Group</p>
  <%= f.input :featured_image, as: :file, label: false, input_html: { class: "form-control" } %>
  <%= f.input :description,label: false, placeholder: "A brief description of your group", input_html: { class: "form-control" } %>
  <%= f.button :submit, class: "btn btn-info block" %>

<% end %>