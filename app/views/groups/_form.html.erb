<%= simple_form_for(@group, html: { class: "form-block" }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Group Name", input_html: { class: "form-control" } %>
  <%= f.input :description,label: false, placeholder: "A brief description of your group", input_html: { class: "form-control" } %>
  <%= f.button :submit, class: "aqua-btn block" %>

<% end %>