<h1>All Profiles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User Id</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Screen name</th>
      <th>Birthday</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.screen_name %></td>
        <td><%= profile.birthday %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "profile-destroy" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

