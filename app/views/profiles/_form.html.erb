<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :profile_image %>
    <%= f.input :screen_name %>
    <%= f.input :age %>
    <%= f.input :birth_day %>
    <%= f.input :birth_month %>
    <%= f.input :birth_year %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
