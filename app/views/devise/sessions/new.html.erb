<div class="col-md-4 col-md-offset-4 text-center">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-block'}) do |f| %>

    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email Address', input_html: {class: 'form-control'} %>
    <%= f.input :password, required: false, label: false, placeholder: 'Password', input_html: {class: 'form-control'} %>
    <%= f.input :remember_me, as: :boolean, wrapper: :checkbox if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: 'aqua-btn block' %>

<% end %>

<%= render "devise/shared/links" %>
</div><!-- end .col-md-4 -->